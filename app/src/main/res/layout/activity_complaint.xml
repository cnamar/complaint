<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".complaints"
    android:orientation="vertical"

    android:gravity="top">

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_gravity="end"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:ems="10"
        android:textSize="20sp"
        android:hint="Name of the complainant"
        android:textColorHint="#252121"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/problem_type"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:layout_marginTop="15sp"
        android:text="Problem Type :"
        android:textColor="#2B2828"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spin2"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_gravity="end"
        android:layout_marginTop="-80sp" />

    <EditText
        android:id="@+id/problem"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Problem Description(if others)"
        android:layout_marginTop="5sp"
        android:textColorHint="#292626"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="Location Details"
        android:textColor="#1F1D1D"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/district"
        android:layout_width="161dp"
        android:layout_height="63dp"
        android:layout_marginTop="20sp"
        android:text="District             :"
        android:textColor="#1F1D1D"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spin3"
        android:layout_width="218dp"
        android:layout_height="65dp"
        android:layout_gravity="end"
        android:layout_marginTop="-80sp" />

    <TextView
        android:id="@+id/panchayat"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:layout_marginTop="20sp"
        android:text="Panchayat             :"
        android:textColor="#1F1D1D"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spin4"
        android:layout_width="221dp"
        android:layout_height="65dp"
        android:layout_gravity="end"
        android:layout_marginTop="-80sp" />

    <TextView
        android:id="@+id/ward"
        android:layout_width="165dp"
        android:layout_height="63dp"
        android:layout_marginTop="20sp"
        android:text="Ward no             :"
        android:textColor="#1F1D1D"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spin5"
        android:layout_width="223dp"
        android:layout_height="65dp"
        android:layout_gravity="end"
        android:layout_marginTop="-80sp" />

    <EditText
        android:id="@+id/landmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:textColorHint="#292626"
        android:hint="Landmark" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_gravity="center"
        android:layout_marginTop="0sp"
        android:text="submit" />


</LinearLayout>